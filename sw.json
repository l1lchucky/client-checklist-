<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MBI Checklist</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f8f9fa;
      color: #333;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
      margin: 0;
      padding: 20px;
    }
    .container {
      background: #fff;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      max-width: 500px;
      width: 100%;
    }
    h2 {
      text-align: center;
      margin-bottom: 15px;
    }
    .form-group {
      margin-bottom: 10px;
    }
    input[type="text"], input[type="tel"] {
      width: 100%;
      padding: 10px;
      margin: 5px 0;
      border: 1px solid #ddd;
      border-radius: 8px;
    }
    .task-list {
      list-style: none;
      padding: 0;
      margin: 15px 0;
    }
    .task-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background: #f1f3f5;
      padding: 10px;
      border-radius: 8px;
      margin-bottom: 8px;
    }
    .task-item input[type="checkbox"] {
      margin-right: 10px;
      transform: scale(1.2);
    }
    .delete-btn {
      background: none;
      border: none;
      color: grey;
      font-size: 18px;
      cursor: pointer;
    }
    .add-section {
      display: flex;
      margin-top: 10px;
    }
    .add-section input {
      flex: 1;
      margin-right: 5px;
    }
    button {
      background: #007bff;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 8px;
      cursor: pointer;
    }
    button:hover {
      background: #0056b3;
    }
    .lang-toggle {
      margin-top: 15px;
      display: block;
      text-align: center;
      background: #28a745;
    }
    .lang-toggle:hover {
      background: #1e7e34;
    }
  </style>
</head>
<body>
  <div class="container" id="app">
    <h2 id="title">MBI Checklist</h2>

    <div class="form-group">
      <input type="text" id="clientName" placeholder="Client Name">
    </div>
    <div class="form-group">
      <input type="tel" id="clientPhone" placeholder="Phone Number">
    </div>

    <ul id="taskList" class="task-list"></ul>

    <div class="add-section">
      <input type="text" id="newTask" placeholder="Add new task...">
      <button onclick="addTask()"><span id="addLabel">Add</span></button>
    </div>

    <button class="lang-toggle" onclick="toggleLanguage()">🌐 <span id="langLabel">العربية</span></button>
  </div>

  <script>
    // Language packs
    const translations = {
      en: {
        title: "MBI Checklist",
        namePlaceholder: "Client Name",
        phonePlaceholder: "Phone Number",
        addPlaceholder: "Add new task...",
        addButton: "Add",
        langButton: "العربية"
      },
      ar: {
        title: "قائمة مهام MBI",
        namePlaceholder: "اسم العميل",
        phonePlaceholder: "رقم الهاتف",
        addPlaceholder: "أضف مهمة جديدة...",
        addButton: "إضافة",
        langButton: "English"
      }
    };

    let currentLang = "en";

    function toggleLanguage() {
      currentLang = currentLang === "en" ? "ar" : "en";
      const t = translations[currentLang];

      document.getElementById("title").innerText = t.title;
      document.getElementById("clientName").placeholder = t.namePlaceholder;
      document.getElementById("clientPhone").placeholder = t.phonePlaceholder;
      document.getElementById("newTask").placeholder = t.addPlaceholder;
      document.getElementById("addLabel").innerText = t.addButton;
      document.getElementById("langLabel").innerText = t.langButton;

      document.documentElement.lang = currentLang;
      document.documentElement.dir = currentLang === "ar" ? "rtl" : "ltr";
    }

    function addTask() {
      const taskInput = document.getElementById("newTask");
      const taskText = taskInput.value.trim();
      if (taskText === "") return;

      const li = document.createElement("li");
      li.className = "task-item";
      li.innerHTML = `
        <label style="flex:1; display:flex; align-items:center;">
          <input type="checkbox">
          <span>${taskText}</span>
        </label>
        <button class="delete-btn" onclick="this.parentElement.remove()">×</button>
      `;
      document.getElementById("taskList").appendChild(li);

      taskInput.value = "";
    }
  </script>
</body>
</html>